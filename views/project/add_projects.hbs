<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0  mt-n4">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">Add Project</h6>
                        </div>
                    </div>
                    <div class="container ">
                        <form method="POST" role="form" class="text-start" action="/admin/add-project">
                            <div class="input-group input-group-outline my-3">
                                <label class="form-label">Project Name</label>
                                <input type="text" name="project_name" class="form-control">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-primary  my-4 mb-2">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>